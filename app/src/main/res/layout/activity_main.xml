<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/navButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/spacing_main"
        android:layout_marginBottom="@dimen/spacing_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCategories"
            style="@style/NavButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_categories"
            app:textAppearance="@style/TextTitle14"
            android:backgroundTint="@color/nav_button_categories_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFavorites"
            style="@style/NavButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_main_half"
            android:layout_weight="1"
            android:text="@string/title_favorites"
            app:textAppearance="@style/TextTitle14"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/spacing_main_half"
            app:iconTint="@color/nav_button_text_color"
            android:backgroundTint="@color/nav_button_favorites_color" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>