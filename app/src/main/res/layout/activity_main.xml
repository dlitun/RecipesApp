<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/navButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginBottom="@dimen/spacing_8"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCategories"
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_2"
            android:layout_weight="1"
            android:backgroundTint="@color/nav_button_categories_color"
            android:text="@string/title_categories" />

        <Button
            android:id="@+id/btnFavorites"
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_2"
            android:layout_weight="1"
            android:backgroundTint="@color/nav_button_favorites_color"
            android:text="@string/title_favorites"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/spacing_8"
            app:iconTint="@color/nav_button_text_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>