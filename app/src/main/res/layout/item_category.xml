<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/corner_small"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_image_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/tvCategoryTitle"
            style="@style/StyleCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            tools:text="Бургеры"/>

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_8"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_8"
            tools:text="Рецепты всех популярных видов бургеров"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
