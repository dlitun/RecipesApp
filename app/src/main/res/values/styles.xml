<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/nav_button_text_color</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/corner_small</item>
    </style>

    <style name="StyleHeaderBadge">
        <item name="android:background">@drawable/bg_header_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleCategoryTitle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleCategoryDescription">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>